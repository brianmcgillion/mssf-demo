<aegis>
  <provide>
     <credential name="encrypt">
         <docstring>
            A Token that is used for encrypting data.
         </docstring>
     </credential>
     <credential name="MssfDBusServiceOwn">
         <docstring>
            Allow to bind to and create the D-Bus service
         </docstring>
     </credential>
     <credential name="StateSetter">
         <docstring>
            Allow calling of the B-Bus method setState()
         </docstring>
     </credential>
     <dbus name="com.meego.mssf" own="MssfDBusServiceOwn" bus="system">
           <node name="/">
             <interface name="com.meego.mssf">
                <annotation name="com.meego.Aegis" value=""/>
                <method name="setState">
                  <annotation name="com.meego.Aegis" value="StateSetter"/>
                </method>
             </interface>
           </node>
     </dbus>
  </provide>
  <request>
    <credential name="mssf-demo::encrypt" />
    <credential name="mssf-demo::MssfDBusServiceOwn" />
    <credential name="mssf-demo::StateSetter" />
    <credential name="UID::brian" />
    <credential name="GRP::users" />
    <credential name="GRP::floppy" />
    <credential name="CAP::sys_admin" />
    <for path="/usr/bin/mssfd" />
  </request>
</aegis>
